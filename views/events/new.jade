extends ../layout

block content
    h1= title
    div
        form(action='/event/create', method='post')
            div(data-role='fieldcontain')
                fieldset(data-role='controlgroup')
                    label(for='name') name
                        input(id='name',type='text',value='', name='name')

            div(data-role='fieldcontain')
                fieldset(data-role='controlgroup')
                    label(for='description') description
                        input(id='description',type='text',value='', name='description')

            div(data-role='fieldcontain')
                fieldset(data-role='controlgroup')
                    label(for='year') year
                        input(id='year',type='number',value='', name='year')

            div(data-role='fieldcontain')
                fieldset(data-role='controlgroup')
                    label(for='month') month
                        input(id='month',type='text',value='', name='month')

            div(data-role='fieldcontain')
                fieldset(data-role='controlgroup')
                    label(for='date') date
                        input(id='date',type='number',value='', name='date')

            div(data-role='fieldcontain')
                input(type='submit',value='Create',data-transition='fade', data-theme='c')
